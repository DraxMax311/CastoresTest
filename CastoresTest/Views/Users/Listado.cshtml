@using CastoresTest.Models.ViewModels
@model UsuariosListadoViewModel

@{
    ViewData["Title"] = "Listado de Usuarios";
    Layout = "../Shared/_Layout";
}

<div class="title-card">
    Listado de Usuarios
</div>

@if(Model.Mensaje is not null)
{
    <div class="alert alert-success" role="alert">
        @Model.Mensaje
    </div>
}

@if(Model.Usuarios is not null)
{
    <form method="POST">
        <table class="table">
            <thead>
                <tr>
                    <th>Accion</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var usuario in Model.Usuarios)
                {
                    <tr>
                        <td>
                            <button class="btn btn-primary me-2" asp-action="HacerAdmin" asp-route-email="@usuario.Email">Hacer Admin</button>
                            <button class="btn btn-secondary me-2" asp-action="RemoverAdmin" asp-route-email="@usuario.Email">Remover Admin</button>
                        </td>
                        <td>
                            @usuario.Email
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
}
else
{
    <p>No hay usuarios por mostrar</p>
}