@using Microsoft.AspNetCore.Identity
@{
    string usuario = (string)TempData["UsuarioActual"];
    TempData["UsuarioActual"] = usuario;
}
<ul class="navbar-nav">
    @if (usuario != null)
    {
        <li class="nav-item">
            <span class="nav-link text-dark">Hola, @usuario.Split("-")[2]</span>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-action="Logout" asp-controller="users">
                <button type="submit" class="nav-link btn btn-link text-dark">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="users" asp-action="Registro">
                Registro
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="users" asp-action="Login">
                Login
            </a>
        </li>
    }
</ul>